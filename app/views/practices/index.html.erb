<% if user_signed_in? %>

<h1>Listing practices</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Workout type</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @practices.each do |practice| %>
  <tr>
    <td><%= practice.date %></td>
    <td><%= practice.workout_type_id %></td>
    <td><%= practice.location %></td>
    <td><%= link_to 'Show', practice %></td>
    <td><%= link_to 'Edit', edit_practice_path(practice) %></td>
    <td><%= link_to 'Destroy', practice, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Practice', new_practice_path %>

<% else %>

<%= render 'public' %>

<% end %>