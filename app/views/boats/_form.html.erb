<%= form_for @boat, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Boat</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :boat_type, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :boat_type, Boat::SIZES.keys, :prompt => "Select..." %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :color, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :color, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :model, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :model, :class => 'text_field' %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', boats_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
