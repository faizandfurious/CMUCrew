<h1>Listing user_roles</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>User</th>
    <th>Role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user_roles.each do |user_role| %>
  <tr>
    <td><%= user_role.user.first_name %></td>
    <td><%= user_role.role.name %></td>
    <td><%= link_to 'Show', user_role %></td>
    
    <td><%= link_to 'Edit', edit_user_role_path(user_role) %></td>
    <td><%= link_to 'Destroy', user_role, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
<% if can? :update, @user_role %>
  <%= link_to 'New User role', new_user_role_path %>
<% end %>