<% if user_signed_in? %>
<h1>Steeler's Games</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Event Name</th>
      <th>Event Date</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <% @fundraisers.each do |fundraiser| %>
    <% if fundraiser.fundraiser_type.name == "Steelers Game" %>
      <tr>
        <td><%= link_to fundraiser.name, fundraiser_path(fundraiser) %></td>
        <td><%= fundraiser.event_date %></td>
        <td><%= fundraiser.location %></td>
        <td>
          <%= render :partial => 'buttons', :locals => {:fundraiser => fundraiser} %>
        </td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<h1>Rent-A-Rowers</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Event Name</th>
