        <td><%= fundraiser.event_date %></td>
        <td><%= fundraiser.location %></td>
        <td>
        <% if current_user.is_fundraiser? %>
              <%= link_to 'Edit', edit_fundraiser_path(fundraiser), :class => 'btn btn-mini' %>
