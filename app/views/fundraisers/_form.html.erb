<%= form_for @fundraiser do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Fundraiser</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :fundraiser_type_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.collection_select :fundraiser_type_id, FundraiserType.all, :id, :name, :prompt => 'Select...' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :event_date, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :event_date, :class => 'text_field datepicker', :dataFormat => 'DD-MM-YYYY' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :location, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :location, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :description, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :capacity, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :capacity, (1..30) %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', fundraisers_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
