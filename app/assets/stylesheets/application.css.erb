/* Fonts
*/

@font-face {
	font-family:'Gunplay';
	src: url(<%= asset_path "gunplay_rg.ttf" %>) format('truetype');
}

/* Generic Styling
*/

html{
}

a.navlink{
	color:#d8d9da;
}

a.navlink2{
	color:black;
}

a.buttonlink{
	display:inline;
	color:#282828;
}

a.buttonlink:hover{
	color:#b50a0d;
}

body{
	background-image:url(<%=asset_path "sb_dt_background.jpeg"%>); 
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	background-attachment: fixed;
}

.email{
	font-style:italic;
	color:#7dad1b;
}

/* FUNDRAISERS SECTION
*/

/* Fundraiser Index
*/
.steelers{
	text-transform: uppercase;
	font-family:'Gunplay';
	font-weight:lighter;
	color:black;
}

.table-steelered thead th{

	font-family:'Gunplay';
	font-weight:lighter;
	background:white;
}

.table-steelered tbody tr td{
	font-family:'Gunplay';
	font-weight:lighter;
}

.table-steelered tbody tr:nth-child(odd) td{
	color:rgb(242, 230, 6);
	background-color:black;
}

.table-steelered tbody tr:nth-child(odd):hover td{
	color:rgb(242, 230, 6);
	background-color:rgb(10,10,10);
}

.table-steelered tbody tr:nth-child(even) td{
	color:black;
	background-color:rgb(242, 230, 6);
}

.table-steelered tbody tr:nth-child(even):hover td{
	color:black;
	background-color:rgb(234, 223, 6);
}


.table-cmu thead th{
	background:#919295;
}

.table-cmu tbody tr:nth-child(odd) td{
	color:#d8d9da;
	background-color:rgb(153,0,0);
}

.table-cmu tbody tr:nth-child(odd):hover td{
	color:#d8d9da;
	background-color:rgb(148,0,0);
}

.table-cmu tbody tr:nth-child(even) td{
	color:#d8d9da;
	background-color:black;
}

.table-cmu tbody tr:nth-child(even):hover td{
	color:#d8d9da;
	background-color:rgb(10,10,10);
}


.table-gwens thead th{
	background:#919295;
}

.table-gwens tbody tr:nth-child(odd) td{
	color:#d8d9da;
	background-color:rgb(89,3,136);
}

.table-gwens tbody tr:nth-child(odd):hover td{
	color:#d8d9da;
	background-color:rgb(87,3,133);
}

.table-gwens tbody tr:nth-child(even) td{
	color:#d8d9da;
	background-color:black;
}

.table-gwens tbody tr:nth-child(even):hover td{
	color:#d8d9da;
	background-color:rgb(10,10,10);
}

/* Fundraiser Show
*/

#fundraiser-name{
	font-size:28px;
	font-weight:bold;
}

#fundraiser-type{
	font-size:12px;
	color:#5a5b5b;
	font-weight:lighter;
}

#fundraiser-table-show{
	width:20em;
}

/* Navigation Bar
*/ 

ul.hmenu {
  list-style: none;	
  margin: 0 0 2em;
  padding: 0;
}

ul.hmenu li {
  display: inline;  
}

ul.navibar {
	text-decoration:none;
	list-style:none;
	width:100%;
}

.nav-wrapper{
	height:7em;
	background: rgba(20, 20, 20, 0.95);
	margin-bottom:4em;
	position:relative;
}

.home-button{
	background:none;
	margin-top:3em;
}

a:hover{
	border: none;
	text-decoration:none;
}


.main-content{
	background-color: white;
	margin-bottom:4em;
	-moz-border-radius: 5px;
	border-radius: 5px;
}

.weather{
	height:6em;
	background: rgba(125, 173, 27, 0.9);
	color:whitesmoke;
}
.weather-icon{
	position:relative;
	margin-left:14em;
	margin-top:-8em;
}
.fundraising{
	background-color:#39e24d;
	color:whitesmoke;
}

.well{
	background-color:white;
}
.boat-lineup {
  list-style: none;	
  margin: 0 0 2em;
  padding: 0;
}

.boat-lineup li {
  text-decoration:none;
  padding-left:5px;
}

.counter{
	color:black;
}

