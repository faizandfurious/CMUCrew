html{
}

a.navlink{
	color:#d8d9da;
}

a.navlink2{
	color:black;
}

a.buttonlink{
	display:inline;
	color:#70010a;
}

a.buttonlink:hover{
	color:#b50a0d;
}

body{
	background-image:url(<%=asset_path "sb_dt_background.jpeg"%>); 
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	background-attachment: fixed;
}

.email{
	font-style:italic;
	color:#7dad1b;
}

ul.hmenu {
  list-style: none;	
  margin: 0 0 2em;
  padding: 0;
}

ul.hmenu li {
  display: inline;  
}

ul.navibar {
	text-decoration:none;
	list-style:none;
	width:100%;
}

.nav-wrapper{
	height:6em;
	background: rgba(20, 20, 20, 0.95);
	margin-bottom:4em;
}

.home-button{
	background:none;
	margin-top:3em;
}

a:hover{
	border: none;
	text-decoration:none;
}


.main-content{
	background-color: white;
	margin-bottom:4em;
	-moz-border-radius: 5px;
	border-radius: 5px;
}

.weather{
	height:6em;
	background: rgba(125, 173, 27, 0.9);
	color:whitesmoke;
}
.weather-icon{
	position:relative;
	margin-left:14em;
	margin-top:-8em;
}
.fundraising{
	background-color:#39e24d;
	color:whitesmoke;
}

.well{
	background-color:white;
}
.boat-lineup {
  list-style: none;	
  margin: 0 0 2em;
  padding: 0;
}

.boat-lineup li {
  text-decoration:none;
  padding-left:5px;
}

.counter{
	color:black;
}

